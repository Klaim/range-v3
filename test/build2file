
import rangev3 = range-v3%lib{range-v3}

for test_cpp : {cxx}{** -experimental/**} # TODO: add an option to handle coroutine tests and remove the exception to not build experimental tests
{
    dot_path = $regex.replace($directory($test_cpp), '\\', '.')
    test_name = "test.$dot_path$name($test_cpp)"
    # info "-> $test_name"
    ./ : exe{$test_name} : $test_cpp $rangev3
}


